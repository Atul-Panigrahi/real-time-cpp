# ------------------------------------------------------------------------------
# compiler flags for the target architecture
# ------------------------------------------------------------------------------

GCC_VERSION   = 8.2.0
GCC_TARGET    = x86_64-w64-mingw32
GCC_PREFIX    =

TGT_SUFFIX    = exe

TGT_CFLAGS    = -O3                                            \
                -finline-functions                             \
                -finline-limit=32                              \
                -march=native                                  \
                -mtune=native

TGT_CPPFLAGS  = -std=c++11

TGT_INCLUDES  = -I$(PATH_APP)/util/STL_C++XX_stdfloat

TGT_AFLAGS    =

TGT_LDFLAGS   =
